extern type Headers
extern type URL
extern type URLSearchParams

extern struct Request {
    url: str,
    method: str,
    headers: Headers,
    fn json() -> Promise<any>
    fn text() -> Promise<str>
    fn arrayBuffer() -> Promise<any>
