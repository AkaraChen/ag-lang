}

extern struct Response {
    ok: bool,
    status: int,
    statusText: str,
    headers: Headers,
    url: str,
    fn json() -> Promise<any>
    fn text() -> Promise<str>
    fn arrayBuffer() -> Promise<any>
    fn clone() -> Response
}

extern fn fetch(input: str, init: any?) -> Promise<Response>
